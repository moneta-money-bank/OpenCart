{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <div class="tab-content">
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry_clientid">{{ entry_clientid }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_moneta_clientid" value="{{ payment_moneta_clientid }}" placeholder="{{ entry_clientid }}" id="input-clientid" class="form-control"/>
                {% if error_clientid %}
                <div class="text-danger">{{ error_clientid }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry_password">{{ entry_password }}</label>
              <div class="col-sm-10">
                <input type="password" name="payment_moneta_password" value="{{ payment_moneta_password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control"/>
                {% if error_password %}
                <div class="text-danger">{{ error_password }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry_brand_id">{{ entry_brandid }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_moneta_brandid" value="{{ payment_moneta_brandid }}" placeholder="{{ entry_brandid }}" id="input-brandid" class="form-control"/>
              	{% if error_brandid %}
                <div class="text-danger">{{ error_brandid }}</div>
                {% endif %}
              </div>
            </div>
           <div class="form-group">
       			<label class="col-sm-2 control-label" for="input-live-test">{{ entry_testmode }}</label>
	            <div class="col-sm-10">
	              <select name="payment_moneta_testmode" id="input-live-test" class="form-control">
	                {% if payment_moneta_testmode %}
	                <option value="1" selected="selected">{{ text_yes }}</option>
	                <option value="0">{{ text_no }}</option>
	                {% else %}
	                <option value="1">{{ text_yes }}</option>
	                <option value="0" selected="selected">{{ text_no }}</option>
	                {% endif %}
	              </select>
            	</div>
          	</div>
          	{% if showPayTypeField == 1 %}
	          	<div class="form-group">
		            <label class="col-sm-2 control-label" for="input-pay_type">{{ entry_pay_type }}</label>
		            <div class="col-sm-10">
		              <select name="payment_moneta_pay_type" id="input-pay_type" class="form-control">
		                {% if payment_moneta_pay_type == 1 %}
		                <option value="0">{{ entry_pay_hostedpay }}</option>
		                <option value="1" selected="selected">{{ entry_pay_iframe }}</option>
		                <option value="2">{{ entry_pay_redirect }}</option>
		                {% elseif payment_moneta_pay_type == 2 %}
		                <option value="0">{{ entry_pay_hostedpay }}</option>
		                <option value="1">{{ entry_pay_iframe }}</option>
		                <option value="2" selected="selected">{{ entry_pay_redirect }}</option>
		                {% else %}
		                <option value="0" selected="selected">{{ entry_pay_hostedpay }}</option>
		                <option value="1">{{ entry_pay_iframe }}</option>
		                <option value="2">{{ entry_pay_redirect }}</option>
		                {% endif %}
		              </select>
	            	</div>
	          	</div>
	        {% else %}
	        	<input type="hidden" name="payment_moneta_pay_type" value="{{ payment_moneta_pay_type }}"/>
	        {% endif %}
          	<div class="form-group">
	            <label class="col-sm-2 control-label" for="input-pay_action">{{ entry_pay_action }}</label>
	            <div class="col-sm-10">
	              <select name="payment_moneta_pay_action" id="input-pay_action" class="form-control">
	                {% if payment_moneta_pay_action == 1 %}
	                <option value="0">{{ entry_pay_sale }}</option>
	                <option value="1" selected="selected">{{ entry_pay_authorization }}</option>
	                {% else %}
	                <option value="0" selected="selected">{{ entry_pay_sale }}</option>
	                <option value="1">{{ entry_pay_authorization }}</option>
	                {% endif %}
	              </select>
            	</div>
          	</div>
          	{% if showUrlFields4Sandbox == 1 %}
	          	<div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_test_token_url">{{ entry_test_token_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_test_token_url" value="{{ payment_moneta_test_token_url }}" placeholder="{{ entry_test_token_url }}" id="input-test_token_url" class="form-control"/>
	              </div>
	            </div>
	            <div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_test_payments_url">{{ entry_test_payments_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_test_payments_url" value="{{ payment_moneta_test_payments_url }}" placeholder="{{ entry_test_payments_url }}" id="input-test_payments_url" class="form-control"/>
	              </div>
	            </div>
	            <div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_test_javascript_url">{{ entry_test_javascript_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_test_javascript_url" value="{{ payment_moneta_test_javascript_url }}" placeholder="{{ entry_test_javascript_url }}" id="input-test_javascript_url" class="form-control"/>
	              </div>
	            </div>
	            <div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_test_cashier_url">{{ entry_test_cashier_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_test_cashier_url" value="{{ payment_moneta_test_cashier_url }}" placeholder="{{ entry_test_cashier_url }}" id="input-test_cashier_url" class="form-control"/>
	              </div>
	            </div>
	        {% endif %}
	        {% if showUrlFields4Live == 1 %}
	            <div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_test_token_url">{{ entry_token_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_token_url" value="{{ payment_moneta_token_url }}" placeholder="{{ entry_token_url }}" id="input-token_url" class="form-control"/>
	              </div>
	            </div>
	            <div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_payments_url">{{ entry_payments_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_payments_url" value="{{ payment_moneta_payments_url }}" placeholder="{{ entry_payments_url }}" id="input-payments_url" class="form-control"/>
	              </div>
	            </div>
	            <div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_javascript_url">{{ entry_javascript_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_javascript_url" value="{{ payment_moneta_javascript_url }}" placeholder="{{ entry_javascript_url }}" id="input-javascript_url" class="form-control"/>
	              </div>
	            </div>
	            <div class="form-group">
	              <label class="col-sm-2 control-label" for="entry_cashier_url">{{ entry_cashier_url }}</label>
	              <div class="col-sm-10">
	                <input type="text" name="payment_moneta_cashier_url" value="{{ payment_moneta_cashier_url }}" placeholder="{{ entry_cashier_url }}" id="input-cashier_url" class="form-control"/>
	              </div>
	            </div>
	        {% endif %}
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_success_status }}</label>
              <div class="col-sm-10">
                <select name="payment_moneta_success_status_id" class="form-control">
                  
				  {% for order_status in order_statuses %}
					  {% if order_status.order_status_id == payment_moneta_success_status_id %}
						  
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  
					  {% else %}
						  
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  
					  {% endif %}
				  {% endfor %}
				
                </select>
              </div>
            </div>
             <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_failed_status }}</label>
              <div class="col-sm-10">
                <select name="payment_moneta_failed_status_id" class="form-control">
                  
				  {% for order_status in order_statuses %}
					  {% if order_status.order_status_id == payment_moneta_failed_status_id %}
						  
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  
					  {% else %}
						  
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  
					  {% endif %}
				  {% endfor %}
				
                </select>
              </div>
            </div>
             <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_refunded_status }}</label>
              <div class="col-sm-10">
                <select name="payment_moneta_refunded_status_id" class="form-control">
                  
				  {% for order_status in order_statuses %}
					  {% if order_status.order_status_id == payment_moneta_refunded_status_id %}
						  
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  
					  {% else %}
						  
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  
					  {% endif %}
				  {% endfor %}
				
                </select>
              </div>
            </div>
             <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_auth_status }}</label>
              <div class="col-sm-10">
                <select name="payment_moneta_auth_status_id" class="form-control">
                  
				  {% for order_status in order_statuses %}
					  {% if order_status.order_status_id == payment_moneta_auth_status_id %}
						  
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  
					  {% else %}
						  
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  
					  {% endif %}
				  {% endfor %}
				
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_voided_status }}</label>
              <div class="col-sm-10">
                <select name="payment_moneta_voided_status_id" class="form-control">
                  
				  {% for order_status in order_statuses %}
					  {% if order_status.order_status_id == payment_moneta_voided_status_id %}
						  
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  
					  {% else %}
						  
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  
					  {% endif %}
				  {% endfor %}
				
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_canceled_status }}</label>
              <div class="col-sm-10">
                <select name="payment_moneta_canceled_status_id" class="form-control">
                  
				  {% for order_status in order_statuses %}
					  {% if order_status.order_status_id == payment_moneta_canceled_status_id %}
						  
                  <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  
					  {% else %}
						  
                  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  
					  {% endif %}
				  {% endfor %}
				
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
              <div class="col-sm-10">
                <select name="payment_moneta_status" id="input-status" class="form-control">
                  {% if payment_moneta_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_moneta_sort_order" value="{{ payment_moneta_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}